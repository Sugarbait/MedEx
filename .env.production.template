# Production Environment Variables for https://carexps.nexasync.ca
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Azure AD B2C Configuration  
VITE_AZURE_CLIENT_ID=your_azure_client_id_here
VITE_AZURE_TENANT_ID=your_azure_tenant_id_here
VITE_AZURE_REDIRECT_URI=https://carexps.nexasync.ca

# Production App Configuration
VITE_APP_NAME=CareXPS Healthcare CRM
VITE_APP_ENVIRONMENT=production
VITE_APP_URL=https://carexps.nexasync.ca

# Security Configuration - HIPAA Compliance Required
VITE_HIPAA_MODE=true
VITE_PHI_ENCRYPTION_KEY=your_256_bit_phi_encryption_key_here
VITE_AUDIT_ENCRYPTION_KEY=your_256_bit_audit_encryption_key_here

# CRITICAL: Generate keys using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# These keys MUST be 64 hexadecimal characters (256 bits) for AES-256-GCM encryption
# Store these keys securely and never commit them to version control

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3
